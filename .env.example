# =============================================================================
# probablyprofit Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# Required fields are marked with [REQUIRED]
# =============================================================================

# -----------------------------------------------------------------------------
# Polymarket Configuration [REQUIRED for Polymarket]
# -----------------------------------------------------------------------------
# Your Polygon wallet private key (for signing transactions)
# Get this from your Metamask or other wallet - DO NOT SHARE THIS
PRIVATE_KEY=your_private_key_here

# Starting capital for risk calculations (in USDC)
INITIAL_CAPITAL=1000.0

# -----------------------------------------------------------------------------
# AI Provider API Keys [At least ONE required]
# -----------------------------------------------------------------------------
# OpenAI (GPT-4, GPT-4o, o1-preview, o3-mini)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_key

# Google Gemini
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key

# Anthropic Claude
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key

# -----------------------------------------------------------------------------
# Intelligence Layer [Optional - Enhanced Analysis]
# -----------------------------------------------------------------------------
# Perplexity API for real-time news context
# Get from: https://www.perplexity.ai/
PERPLEXITY_API_KEY=pplx-your_perplexity_key

# Twitter/X API for sentiment analysis
# Get from: https://developer.twitter.com/
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Reddit API for sentiment analysis
# Get from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# -----------------------------------------------------------------------------
# Web Dashboard [Optional]
# -----------------------------------------------------------------------------
# Enable the React web dashboard
ENABLE_WEB_DASHBOARD=true

# Port for the web dashboard
WEB_DASHBOARD_PORT=8000

# -----------------------------------------------------------------------------
# Persistence [Optional]
# -----------------------------------------------------------------------------
# Enable SQLite persistence for trade history
ENABLE_PERSISTENCE=true

# Database file path (relative to project root)
DATABASE_PATH=data/probablyprofit.db

# -----------------------------------------------------------------------------
# Trading Configuration [Optional - Override CLI defaults]
# -----------------------------------------------------------------------------
# Platform
PLATFORM=polymarket

# Strategy: mean-reversion, momentum, value, contrarian, volatility, calendar, arbitrage, news, custom
STRATEGY=mean-reversion

# Agent: openai, gemini, anthropic, ensemble, fallback
AGENT=openai

# Loop interval in seconds
INTERVAL=60

# Position sizing: manual, fixed_pct, kelly, confidence_based, dynamic
SIZING=kelly

# Kelly fraction (0.1 = 10% of Kelly, safer; 0.5 = 50% of Kelly)
KELLY_FRACTION=0.25

# -----------------------------------------------------------------------------
# Paper Trading [Optional]
# -----------------------------------------------------------------------------
# Initial virtual capital for paper trading
PAPER_CAPITAL=10000

# -----------------------------------------------------------------------------
# Ensemble Mode [Optional]
# -----------------------------------------------------------------------------
# Agents to use for ensemble mode (comma-separated)
ENSEMBLE_AGENTS=openai,gemini,anthropic

# Voting strategy: majority, weighted, unanimous, highest
VOTING=majority

# Minimum agents that must agree
MIN_AGREEMENT=2

# -----------------------------------------------------------------------------
# Risk Management [Advanced]
# -----------------------------------------------------------------------------
# Maximum position size as percentage of capital
MAX_POSITION_PCT=0.10

# Maximum total exposure as percentage of capital
MAX_EXPOSURE_PCT=0.50

# Stop loss percentage (0.20 = 20% loss triggers stop)
STOP_LOSS_PCT=0.20

# Trailing stop percentage
TRAILING_STOP_PCT=0.10

# Maximum drawdown before halting trading (0.30 = 30% drawdown from peak)
MAX_DRAWDOWN_PCT=0.30

# -----------------------------------------------------------------------------
# Telegram Alerts [Optional - Real-time notifications]
# -----------------------------------------------------------------------------
# Create a bot via @BotFather and get the token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Get your chat ID by messaging @userinfobot
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Alert levels to send: INFO, WARNING, CRITICAL (comma-separated)
# INFO = trade executions, bot start/stop
# WARNING = risk limits approaching, reconciliation issues
# CRITICAL = max drawdown, circuit breaker, errors
TELEGRAM_ALERT_LEVELS=INFO,WARNING,CRITICAL

# -----------------------------------------------------------------------------
# Backtest Configuration [Optional]
# -----------------------------------------------------------------------------
# Number of days to simulate
BACKTEST_DAYS=30




MARKET_WHITELIST_KEYWORDS="15M,15 min,BTC,ETH"
MARKET_BLACKLIST_KEYWORDS="daily,weekly"
MARKET_TAG_SLUG="cryptocurrency"
MARKET_DURATION_MAX_MINUTES=15